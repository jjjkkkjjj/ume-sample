    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build: test",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: Generate test's CMakeLists.txt",
                "CMake: Clean the test's caches",
                "CMake: Make test",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        // `cmake ..` in test-sample/build
        {
            "type": "shell",
            "label": "CMake: Generate test's CMakeLists.txt",
            "command": "cmake",
            "args": [
                "..",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "detail": "Task generated by Debugger."
        },
        // `make clean` in test-sample/build 
        {
            "type": "shell",
            "label": "CMake: Clean the test's caches",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "detail": "Task generated by Debugger."
        },
        // `make` in test-sample/build
        {
            "type": "shell",
            "label": "CMake: Make test",
            "command": "make",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "detail": "Task generated by Debugger."
        },
